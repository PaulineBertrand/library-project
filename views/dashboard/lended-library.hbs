<div class="toolbar">
    {{> toolbar }}
</div>

<div class="dashboard-books-container">

    <h1>All of my lent books</h1>

    {{#unless books}}
    <p>All of your books are home!</p>
    {{/unless}}

    <ul>
    {{#each books}}
        <li class="one-book">
            <img src="{{image}}" alt="book image" width="200px">
            <div class="one-book-info">
                <h4>{{title}}</h4>
                <h4>by {{author}}</h4>
                <div class="one-book-buttons">
                    <a href="/dashboard/{{_id}}/edit-book"><i class="fa fa-edit table-icon"></i></a>
                    <a href="/dashboard/{{_id}}/delete-book"><i class="fa fa-trash table-icon"></i></a>
                        
                   
                
                </div>

                <form action="/dashboard/{{_id}}/available" method="post">
                 <button type="submit" class="back-book">I got this book back</button></form>
            </div>
        </li>
    {{/each}}
    </ul>

</div>