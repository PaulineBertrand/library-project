
<div class="toolbar">
{{> toolbar }}
</div>

<div id="main">
<section>



<h2>Add a book to your personal library</h2>

<form action="/dashboard/create-book" method="post" enctype="multipart/form-data">
<div>
    <div>
        <label >Title</label>
        <input type="text" name="title">
    </div>

    <div>
        <label >Author</label>
        <input type="text" name="author">
    </div>

    <div>
        <label >Genre</label>
        <select type="text" name="genre">
            {{#each allGenres}}
                <option value={{this}}>{{this}}</option>
            {{/each}}
        </select>
    </div>

    <div>
        <label >Image</label>
        <input input type="file"  name="image">
    </div>

    <div>
        <label >Optional: what did you think about this book?</label>
        <input type="textarea" name="comment" maxlength="600" placeholder="600 characters maximum">
    </div>
</div>
    <button>OK</button>
</form>

</section>
</div>
