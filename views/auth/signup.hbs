<div id="container-auth">

<section class="auth">

<h1>Create your account</h1>
<form method="post" action="/auth/signup" class="form">
    {{> flashMessage }}



   {{!-- <label for="name">name</label> --}}
    <input class="input" type="text" id="name" name="name" placeholder="Name">
    {{!-- <label for="lastname">last name</label> --}}
    <input class="input" type="text" id="lastname" name="lastname" placeholder="Last name">
    {{!-- <label for="email">email</label> --}}
    <input class="input" type="email" id="email" name="email" placeholder= "Email">
    {{!-- <label for="password">password</label> --}}
    <input class="input" type="password" id="password" name="password" placeholder="Password">
    <button class="btn">Sign up</button>
</form>


<p>
    Already got an account ? <a href="/auth/signin">Sign in</a>
</p>

</section>

</div>